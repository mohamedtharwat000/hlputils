{
  "name": "hlputils",
  "version": "1.1.0",
  "description": "helper utilities",
  "main": "dist/index.js",
  "author": "Mohamed Tharwat",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint --fix src",
    "format": "prettier --write src",
    "build": "tsc",
    "all": "npm-run-all lint format build",
    "lint:watch": "onchange -k src -- npm run lint ",
    "format:watch": "onchange -k src -- npm run format ",
    "build:watch": "tsc -w",
    "all:watch": "onchange -k src -- npm-run-all lint format build"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.7.0",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-import": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "3.2.5",
    "typescript": "^4.9.5"
  }
}
