{
  "name": "hlputils",
  "version": "1.2.4",
  "description": "helper utilities",
  "main": "dist/index.js",
  "author": "Mohamed Tharwat",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "format": "prettier --write src",
    "lint": "eslint --fix src",
    "build": "tsc",
    "all": "npm-run-all format lint build",
    "format:watch": "onchange -k src -- npm run format ",
    "lint:watch": "onchange -k src -- npm run lint ",
    "build:watch": "onchange -k src -- npm run build",
    "all:watch": "onchange -k src -- npm-run-all format lint build"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@stylistic/eslint-plugin": "^1.8.1",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.2.5",
    "typescript": "^4.9.5",
    "typescript-eslint": "^7.13.1"
  },
  "keywords": [
    "javascript",
    "typescript",
    "utilities",
    "utility functions",
    "helper functions"
  ]
}
